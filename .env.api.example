# Backend API Server Environment Variables
# Copy this to .env.api and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Database Configuration (Coolify)
DB_HOST=automation-postgres
DB_PORT=5432
DB_NAME=automation_platform
DB_USER=automation_user
DB_PASSWORD=your_postgres_password_from_coolify

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://demo.yasta.online

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here

# External Services (for future use)
OPENAI_API_KEY=your_openai_api_key
WHATSAPP_API_TOKEN=your_whatsapp_token
VAPI_API_KEY=your_vapi_api_key
