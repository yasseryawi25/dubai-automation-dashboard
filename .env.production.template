# Dubai Real Estate Dashboard - Production Environment
# Copy these variables to your Coolify application environment settings

# ================================
# BASIC APPLICATION CONFIGURATION
# ================================
NODE_ENV=production
VITE_APP_NAME=Dubai Real Estate AI Dashboard

# ================================
# DATABASE CONFIGURATION
# ================================
# Replace with your actual database credentials from Coolify
VITE_DATABASE_URL=postgresql://automation_user:YOUR_DB_PASSWORD@automation-postgres:5432/automation_platform
VITE_REDIS_URL=redis://:YOUR_REDIS_PASSWORD@automation-redis:6379

# Database connection details
VITE_POSTGRES_HOST=automation-postgres
VITE_POSTGRES_PORT=5432
VITE_POSTGRES_DB=automation_platform
VITE_POSTGRES_USER=automation_user

VITE_REDIS_HOST=automation-redis
VITE_REDIS_PORT=6379

# ================================
# API CONFIGURATION
# ================================
VITE_API_URL=https://api.yasta.online
VITE_SUPABASE_URL=https://supabase.yasta.online
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ================================
# AI SERVICES CONFIGURATION
# ================================
# VAPI (Voice Agent Platform Integration)
VITE_VAPI_API_KEY=your_vapi_api_key_here
VITE_VAPI_ASSISTANT_ID=your_vapi_assistant_id_here

# OpenAI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-4

# ================================
# CLIENT CONFIGURATION
# ================================
VITE_CLIENT_ID=demo_client
VITE_DEFAULT_LANGUAGE=en
VITE_TIMEZONE=Asia/Dubai

# ================================
# FEATURE FLAGS
# ================================
VITE_ENABLE_VOICE_AGENT=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=false

# ================================
# SECURITY CONFIGURATION
# ================================
VITE_JWT_SECRET=your_jwt_secret_here
VITE_ENCRYPTION_KEY=your_encryption_key_here

# ================================
# INTEGRATION CONFIGURATION
# ================================
# WhatsApp Business API
VITE_WHATSAPP_API_TOKEN=your_whatsapp_token_here
VITE_WHATSAPP_PHONE_ID=your_phone_id_here

# n8n Automation Platform
VITE_N8N_API_URL=https://n8n.yasta.online
VITE_N8N_API_KEY=your_n8n_api_key_here

# ================================
# MONITORING & ANALYTICS
# ================================
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GA_TRACKING_ID=your_google_analytics_id_here

# ================================
# NOTIFICATION CONFIGURATION
# ================================
VITE_SLACK_WEBHOOK_URL=your_slack_webhook_here
VITE_EMAIL_SERVICE_API_KEY=your_email_service_key_here

# ================================
# PERFORMANCE OPTIMIZATION
# ================================
VITE_CACHE_DURATION=3600
VITE_API_TIMEOUT=30000
VITE_MAX_RETRIES=3

# ================================
# DOMAIN CONFIGURATION
# ================================
VITE_PRIMARY_DOMAIN=dashboard.yasta.online
VITE_API_DOMAIN=api.yasta.online
VITE_CDN_URL=https://cdn.yasta.online
